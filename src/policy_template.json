{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ListObjectsInBucket",
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": ["arn:aws:s3:::{{ bucket }}"]
    },
    {
      "Sid": "AllObjectActions",
      "Effect": "Allow",
      "Action": ["s3:DeleteObject", "s3:Get*", "s3:PutObject", "s3:*Object", "s3:ListObjectsV2"],
      "Resource": ["arn:aws:s3:::{{ bucket }}/*"]
    }
  ]
}
